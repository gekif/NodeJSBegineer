<h1>Edit Post</h1>

<form action="/admin/posts/edit" method="post">

    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" placeholder="Enter title">
    </div>

    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>

    <div class="form-check">
        <label for="allowComments">Allow Comments</label>
        <input name="allowComments" type="checkbox" class="form-check-input" id="allowComments" style="position: relative; margin: 0 0">

    </div>

    <div class="form-group">
        <label for="body">Body</label>
        <textarea name="body" cols="30" rows="10" class="form-control" id="body" placeholder="Enter Description"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>
