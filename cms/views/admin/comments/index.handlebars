<h1>Comments</h1>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Owner</th>
        <th>Date</th>
    </tr>
    </thead>
    <tbody>

    {{#each comments}}

    <tr>
        <td>{{ id }}</td>
        <td>{{ user.firstName }}</td>
        <td>{{ generateDate date 'MMMM Do YYYY' }}</td>

    </tr>

    {{/each}}


    </tbody>
</table>