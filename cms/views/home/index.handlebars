<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">Home
            <small>Secondary Text</small>
        </h1>

        {{#each posts}}
        <!-- Blog Post -->
        <div class="card mb-4">
            <img class="card-img-top" style="width: 730px; height: 280px" src="{{#if file }} /uploads/{{ file }} {{else}} http://placehold.it/750x300 {{/if}}" alt="Card image cap">
            <div class="card-body">
                <h2 class="card-title">{{ title }}</h2>
                <p class="card-text">{{ body }}</p>
                <a href="/post/{{ id }}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                Posted on {{ generateDate date 'MMMM Do YYYY' }} by
                <a href="#">Start Bootstrap</a>
            </div>
        </div>
        {{/each}}

        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">

        {{#paginate current=1}}{{/paginate}}


